on boot

on post-fs-data
# NFC storage
    mkdir /data/nfc

# NFC permission
    chown nfc nfc /dev/sec-nfc
    chmod 0770 /dev/sec-nfc

    chown nfc nfc /data/nfc
    chmod 0770 /data/nfc

#add by Kachel for nfc sku
on init && property:ro.boot.nfc=true
    setprop persist.hardware.sku nfc
    setprop ro.boot.product.hardware.sku nfc
